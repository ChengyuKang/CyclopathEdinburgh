<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logout_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_signup_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/arbutus_slab"
        android:shadowColor="#FFFFFF"
        android:text="Quit"
        android:textColor="@color/themegreen"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exit_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/arbutus_slab"
        android:gravity="center"
        android:textColor="@color/themegreen"
        android:text="Are you sure you want to exit?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/exit_yes"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/themegreen"
        android:fontFamily="@font/arbutus_slab"
        android:text="yes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exit_no"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exit_no"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/themegreen"
        android:fontFamily="@font/arbutus_slab"
        android:text="no"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/exit_yes" />


</androidx.constraintlayout.widget.ConstraintLayout>