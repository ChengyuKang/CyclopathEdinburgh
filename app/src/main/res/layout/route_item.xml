<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="16dp"
    android:background="@drawable/rounded_box">

    <ImageView
        android:id="@+id/route_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/location_unknown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/route_item_clickable"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/route_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/route_image"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/route_item_clickable"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/route_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/route_length_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Length"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/route_elevation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Elevation"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/route_popularity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Popularity"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/route_item_clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="onRouteItemClick"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
