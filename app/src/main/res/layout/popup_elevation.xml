<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_elevation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_signup_border">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/arbutus_slab"
        android:shadowColor="#FFFFFF"
        android:text="Route Elevation"
        android:textColor="@color/themegreen"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/elevation_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/up_ele"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/up_ele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/arbutus_slab"
        android:shadowColor="#FFFFFF"
        android:text="15"
        android:textColor="@color/themegreen"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/goup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/goup"
        app:layout_constraintStart_toEndOf="@+id/up_ele"
        app:layout_constraintTop_toBottomOf="@id/elevation_chart" />

    <TextView
        android:id="@+id/down_ele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/arbutus_slab"
        android:shadowColor="#FFFFFF"
        android:text="5"
        android:textColor="@color/themegreen"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goup" />

    <ImageView
        android:id="@+id/godown"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/godown"
        app:layout_constraintStart_toEndOf="@+id/down_ele"
        app:layout_constraintTop_toBottomOf="@+id/elevation_chart" />




</androidx.constraintlayout.widget.ConstraintLayout>