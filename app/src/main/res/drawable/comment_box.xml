<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the border color and width -->
    <stroke
        android:width="2dp"
        android:color="@color/black"/>

    <!-- Set the border radius for rounded corners -->
    <corners
        android:radius="20dp"/>

    <!-- Set the background color to white -->
    <solid
        android:color="@color/white"/>

    <!-- Add a drop shadow effect to the comment -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp" />
    <corners
        android:radius="20dp" />
    <solid
        android:color="#D4E7BE" />
    <stroke
        android:width="1dp"
        android:color="#D4E7BE" />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp" />
    <corners
        android:radius="20dp" />
    <solid
        android:color="#ECF4E2" />

</shape>
